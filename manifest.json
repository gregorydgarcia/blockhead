{
    "manifest_version": 2,
    "name": "Blockhead",
    "version": "0.1",
    "permissions": [
        "storage",
        "webRequest",
        "<all_urls>",
        "webRequestBlocking"
    ],
    "background":
    {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action":
    {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}